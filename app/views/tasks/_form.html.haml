.modal.hide.fade#new_tsk_mod
  .modal-header
    %h3 Add Task
  = simple_form_for @task, html: { class: 'form-horizontal' } do |f|
    .modal-body
      %fieldset
        = f.input :name, label: 'Name the task'
        = f.input :estimated_time, as: :decimal, hint: 'learn more', label: 'Estimate (optional)'
    .modal-footer
      %button.btn{ data: { dismiss: 'modal' } } Cancel
      = f.button :submit, class: 'btn btn-inverse'

