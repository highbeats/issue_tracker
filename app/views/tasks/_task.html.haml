%tr{ data: { task_id: task.id }, class: "#{'error'if task.live?}" }
  %td= best_in_place task, :name, nil: 'Click to enter'
  %td= best_in_place task, :project_id, type: :select, collection: current_manager.projects.map{ |p| [ p.id, p.name ] }, nil: "Click to add"
  %td= "#{task.estimated_time} hours}"
  %td.timer
    %span.label.hours= task.calc_time_total.split(':')[0]
    %span :
    %span.label.mins= task.calc_time_total.split(':')[1]
    %span :
    %span.label.secs= task.calc_time_total.split(':')[2]
  %td
    .btn-group{ data: { toggle: 'buttons-radio', task_id: task.id, track_id: (task.live? ? task.time_trackings.running.first.id : '') } }
      = link_to 'Start', '#', class: "btn btn-danger btn-mini #{'active' if task.live?}"
      = link_to 'Stop', '#', class: 'btn btn-inverse btn-mini'
